<% if current_user.try(:admin) %>
  <div class="panel panel-default">
    <div class="panel-body"> 
      <h1>Listing pastusers</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pastusers.each do |pastuser| %>
            <tr>
              <td><%= pastuser.username %></td>
              <td><%= pastuser.email %></td>
              <td><%= link_to 'Show', pastuser %></td>
              <td><%= link_to 'Edit', edit_pastuser_path(pastuser) %></td>
              <td><%= link_to 'Destroy', pastuser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
    <div class="panel-footer">

      <%= link_to 'New Pastuser', new_pastuser_path %>
    </div>
  </div>
<% else %>
  <%= render 'pages/unauth' %>
<% end %>
