<% if current_user.try(:admin) %>
	<div class="row">	
		<div class="col-md-offset-3 col-md-6">
			<div class="panel panel-default">
				<div class="panel-body">		
					<div class="visible-sm-block visible-md-block visible-lg-block homepagework">
						<h1>Add a NinjaTip</h1>
					</div>

					<div class="visible-xs-block homepagework">
						<h3>Add a NinjaTip</h3>
					</div>
					
					<%= form_for @dailytip, url: add_daily_tip_path do |form| %>
						
						<%= form.hidden_field :user_id, value: current_user.id %>

						<div class="form-group">
							<%= form.label :tip %>
							<%= form.text_field :tip, autofocus: true, class: "form-control" %>
						</div>
						<div class="form-group">
							<%= form.label :show_date %>
							<%#= form.date_select :show_date, options = { :start_year => Date.current.year, :end_year => Date.current.year, month: Date.current.month, discard_year: true}, default: { year: Date.current.year } %>
							<%= form.text_field :show_date, 'data-behaviour' => 'datepicker', placeholder: "yyyy-mm-dd", class: "form-control" %>
								<script type="text/javascript">
								  $('[data-behaviour~=datepicker]').datepicker({"format": "yyyy-mm-dd"});
								</script>
						</div>
					    <div class="form-group">
				    		<%= button_to "Add NinjaTip", add_daily_tip_path, class: "btn btn-primary" %>
				    	</div>

					<% end %>
				</div>
			</div>
		</div>
	</div>
<% else %>
	<%= render "pages/pleasesignin" %>
<% end %>