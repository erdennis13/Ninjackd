<div class="visible-sm-block visible-md-block visible-lg-block homepagework">
	<div class="panel panel-default">
		<div class="panel-body">

			<h1>Workout Subscriptions</h1>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<th>Name</th>
						<th>Category</th>
						<th>Description</th>
						<th>Hits</th>
						<th>Likes</th>
						<th>Comments</th>
					</thead>


					<% @workouts.each do |list| %>
						<% if list.active? %>
							<tr class="activeWorkout">
								<td><%= link_to list.name, list, class: "workoutLink" %></td>
								<td><%= list.category %></td>
								<td><%= list.description %></td>
								<td><%= list.subscriptions.count %></td>
								<td><%= list.likes.count %></td>
								<td><%= list.comments.count %></td>
							</tr>
						<% else %>
							<tr>
								<td><%= link_to list.name, list, class: "workoutLink" %></td>
								<td><%= list.category %></td>
								<td><%= list.description %></td>
								<td><%= list.subscriptions.count %></td>
								<td><%= list.likes.count %></td>
								<td><%= list.comments.count %></td>
							</tr>
						<% end %>
					<% end %>

				</table>
			</div>

		</div>

	</div>
</div>

<div class="visible-xs-block homepagework">
	<div class="panel panel-default">
		<div class="panel-body" style="padding:0">

			<h3 style="padding:5px">Workout Subscriptions</h3>
			<div class="table-responsive">
				<table class="table table-striped table-condensed">
					<thead>
						<th>Name</th>
						<th>Hits</th>
						<th>Likes</th>
						<th>Comments</th>
					</thead>


					<% @workouts.each do |list| %>
						<% if list.active? %>
							<tr class="activeWorkout">
								<td><small><%= link_to list.name, list, class: "workoutLink" %></small></td>
								<td align="right"><small><%= list.subscriptions.count %></small></td>
								<td align="right"><small><%= list.likes.count %></small></td>
								<td align="right"><small><%= list.comments.count %></small></td>
							</tr>
						<% else %>
							<tr>
								<td><small><%= link_to list.name, list, class: "workoutLink" %></small></td>
								<td align="right"><small><%= list.subscriptions.count %></small></td>
								<td align="right"><small><%= list.likes.count %></small></td>
								<td align="right"><small><%= list.comments.count %></small></td>
							</tr>
						<% end %>
					<% end %>

				</table>
			</div>

		</div>

	</div>
	
</div>

<div class="center">
	<%= will_paginate @workouts, renderer: BootstrapPagination::Rails %>
</div>