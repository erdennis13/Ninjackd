<h2 class="center">Here's a look into this week's workouts</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th>Duration (min)</th>
      <% if current_user.try(:admin?) %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <% @workout= Workout.all %>
  <tbody>
    <% @workout.each do |workout| %>
      <tr>
        <% if user_signed_in? %>
          <td><%= link_to workout.name, workout, class: "workoutLink" %></td>
        <% else %>
          <td><%= workout.name%></td>
        <% end %>
        <td><%= workout.category %></td>
        <td><%= workout.description %></td>
        <td><%= workout.duration %></td>
        <% if current_user.try(:admin?) %>
          <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
          <td><%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>