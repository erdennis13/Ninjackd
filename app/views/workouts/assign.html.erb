<div class="panel panel-default">
	<div class="panel-body">
		<h1><%= @workout.name %>
		<small><%= @workout.description %></small></h1>
		<hr/>

		<% @workout.workoutbits.each do |work|  %>

			<h3><%= link_to Exercise.find(work.exercise_id).name, Exercise.find(work.exercise_id), class: "workoutLink" %></h3>

			Sets: <%= work.sets %> &nbsp
			Reps: <%= work.reps %>

			<hr/>
		<% end %>

<% if false %> <%#Acting as a mutliline comment %>

		<%= form_for(@workout) do |f| %>
			<!--Here I am...in the form!-->
			<%#= f.text_field :name %>
			<%= f.fields_for :workoutbits do |workoutbit_form| %>
				<%#= workoutbit_form.fields_for :exercises do |exercise_form| %>
	      				<%#= exercise_form.label :id, "Exercise ID: " %>
	      				<%#= exercise_form.text_field :id %>
				<%# end %>
   				
      				<%#= workoutbit_form.label :id, "Workoutbit ID: " %>
      				<%#= workoutbit_form.number_field :id %>

      				<%= workoutbit_form.label :exercise_id, "Exercise ID: "%>
 					<%= workoutbit_form.number_field :exercise_id %>
 					&nbsp

 					<%= workoutbit_form.label :sets, "Sets: "%>
 					<%= workoutbit_form.number_field :sets %>
 					&nbsp

 					<%= workoutbit_form.label :reps, "Reps: "%>
 					<%= workoutbit_form.number_field :reps %>

			<% end %>

			<%= f.submit %>
			
		<% end %>
<% end %>
	<% @exerciseidoptions = [] %>
	<% @exerciseOptions.each do |try| %>
		<% @exerciseidoptions.append(try.id) %>
		<% @exerciseidoptions %>
	<% end %>


		<%= form_for :workoutbit, url: workoutbits_path do |form| %>

			<%#= form.label :workout_id, "Workout ID:" %>
			<%#= form.select :workout_id, options_for_select([@workout.id]) %>
			<%= form.hidden_field :workout_id, value: @workout.id %>

			<div class "row">
				<div class = 'col-xs-2'>
					<%= form.label :exercise_id, "Exercise ID:" %>
					<%= form.select :exercise_id, options_for_select(@exerciseidoptions), {}, {class: "form-control"} %>
				</div>
				<div class = 'col-xs-4'>
					<%= form.label :sets, "Sets" %>
					<%= form.number_field :sets, class: "form-control" %>
				</div>
				<div class = 'col-xs-4'>
					<%= form.label :reps, "Reps" %>
					<%= form.number_field :reps, class: "form-control" %>
				</div>
			</div>
			<br/>
			<div class="form-group">
				<%= form.submit "Add Workoutbit", class: "btn btn-primary" %>
			</div>

		<% end %>

	</div>
	<div class="panel-footer">
		<%= link_to "Back", workouts_path %>
	</div>
</div>