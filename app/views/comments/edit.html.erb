<% if current_user.try(:admin?) %>
	<div class="panel panel-default">
		<div class="panel-body">
			<h1>Editing comment</h1>

			<%= render 'form' %>
		</div>
		<div class="panel-footer">
			<%= link_to 'Show', @comment %> |
			<%= link_to 'Back', comments_path %>
		</div>
	</div>
<% else %>
	<%= render 'pages/unauth' %>
<% end %>