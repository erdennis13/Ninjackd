<div class="panel panel-default">
  <div class="panel-body">
    <h1>Listing warmups</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <%if current_user.try(:admin?) %>
            <th colspan="3"></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @warmups.each do |warmup| %>
          <tr>
            <td><%= warmup.name %></td>
            <td><%= warmup.description %></td>
            <% if current_user.try(:admin?) %>
              <td><%= link_to 'Show', warmup %></td>
              <td><%= link_to 'Edit', edit_warmup_path(warmup) %></td>
              <td><%= link_to 'Destroy', warmup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <% if current_user.try(:admin?) %>
    <div class="panel-footer">
      <%= link_to 'New Warmup', new_warmup_path %>
    </div>
  <% end %>
</div>
